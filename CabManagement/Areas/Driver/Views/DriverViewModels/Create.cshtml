@model DriverViewModel

@{
    ViewData["Title"] = "Infy Cab Drivers Team";
}

<h4>Driver Registration</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CarName" class="control-label"></label>
                <input asp-for="CarName" class="form-control" />
                <span asp-validation-for="CarName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarNumber" class="control-label"></label>
                <input asp-for="CarNumber" class="form-control" />
                <span asp-validation-for="CarNumber" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="LicenseNumber" class="control-label"></label>
                <input asp-for="LicenseNumber" class="form-control" />
                <span asp-validation-for="LicenseNumber" class="text-danger"></span>
           </div>
            <div>
                <p><a><a href="https://localhost:7166/Driver/DriverViewModels/index">Join Team</a></p>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Home">Back to List</a>
</div>

